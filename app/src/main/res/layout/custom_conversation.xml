<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/linear_conversation"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:maxHeight="100dp"
    android:minHeight="80dp"
    android:layout_height="80dp">
<androidx.cardview.widget.CardView
    app:cardElevation="1dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_width="match_parent"
    app:cardCornerRadius="5dp"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linear_conversation_custom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="2">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ik"
                   />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="7">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_name"
                        android:textStyle="bold"
                        android:paddingLeft="10dp"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ahssan"/>
                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:layout_marginLeft="10dp"
                        android:textSize="12sp"
                        android:text=""/>
                </LinearLayout>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_last_msg"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="hy bro how are you ?"/>
                <TextView
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_newmsg"
                    android:layout_width="150dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:text="1fjh sdfhshfh sdfhhhf"
                    android:textColor="@color/colorRed"
                    android:layout_gravity="left"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">


                <ImageView
                    android:id="@+id/iv_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:src="@drawable/ic_more_red" />


            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A+"
            android:textColor="@color/colorRed"
            android:textSize="18sp"
            android:layout_marginRight="35dp"
            android:layout_gravity="center|right"
            />
    </FrameLayout>

</androidx.cardview.widget.CardView>
</LinearLayout>