<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/background_color"
    tools:context=".Activities.RequsetBloodActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/colorRed"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:text="@string/blood_request"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:layout_marginTop="25dp"/>
            </FrameLayout>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-60dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp"
            app:cardCornerRadius="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linear_spinner"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_search"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="10"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_marginRight="-3dp"
                            android:id="@+id/iv_services"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_blood"/>
                    </LinearLayout>

                    <FrameLayout
                        android:layout_weight="9"
                        android:layout_width="0dp"
                        android:layout_height="50dp">
                        <Spinner
                            android:backgroundTint="@android:color/transparent"
                            android:paddingLeft="10dp"
                            android:id="@+id/spinnerblood"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"/>
                        <ImageView
                            android:id="@+id/ivSpinnerDropDown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_arrow_drop_down"
                            android:layout_gravity="right|center"/>
                    </FrameLayout>
                </LinearLayout>

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_marginTop="25dp"
                    android:paddingLeft="10dp"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:textColor="#8C8686"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:drawableLeft="@drawable/ic_phone"
                    android:drawablePadding="10dp"
                    android:hint="@string/enter_phone_number"
                    android:background="@drawable/bg_search"
                    android:layout_height="50dp"/>

                <TextView
                    android:id="@+id/et_address"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:gravity="center|left"
                    android:hint="@string/enter_your_address"
                    android:drawableLeft="@drawable/ic_house"
                    android:drawablePadding="10dp"
                    android:textColor="#8C8686"
                    android:textSize="16sp"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:background="@drawable/bg_search"
                    android:layout_height="50dp"/>
                <EditText
                    android:id="@+id/et_messege"
                    android:layout_marginTop="25dp"
                    android:paddingLeft="15dp"
                    android:gravity="top"
                    android:paddingTop="5dp"
                    android:textColor="#8C8686"
                    android:textSize="16sp"
                    android:paddingRight="5dp"
                    android:layout_width="match_parent"
                    android:hint="@string/enter_you_messege_here"
                    android:background="@drawable/bg_search"
                    android:layout_height="100dp"/>
                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="50dp"
                    android:text="@string/submit"
                    android:textAllCaps="false"
                    android:layout_marginBottom="30dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/bg_btn"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>