<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_custom"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    android:weightSum="10">
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorWhite"/>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="99dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:id="@+id/linear_reward_pic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="10dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_seq"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:text="12"
                    android:textSize="12sp"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/bg_tv_reward"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_profile"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:src="@drawable/ik" />

            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5">

            <LinearLayout
                android:id="@+id/linear_reward1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:gravity="left"
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_person_reward"
                    android:drawablePadding="10dp"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:text="Name"
                    android:textColor="@color/colorWhite" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:paddingLeft="12dp"
                    android:id="@+id/tv_points"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_award"
                    android:drawablePadding="10dp"
                    android:text="2000"
                    android:textColor="@color/colorWhite" />


            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_reward2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:gravity="left"
                android:id="@+id/tv_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_rate"
                android:drawablePadding="13dp"
                android:singleLine="true"
                android:text="4.8"
                android:textColor="@color/colorWhite" />

            <TextView
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:id="@+id/tv_blood_donation_nums"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_speedometer"
                android:drawablePadding="10dp"
                android:text="3"
                android:singleLine="true"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="2">
            <ImageView
                android:id="@+id/iv_flag"
                android:scaleType="fitXY"
                android:layout_gravity="center|left"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/logo"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>



</LinearLayout>