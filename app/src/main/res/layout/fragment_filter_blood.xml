<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.FilterBloodFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/colorRed"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:text="Filter Blood"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:layout_marginTop="25dp"/>
        </FrameLayout>
    </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-60dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_search"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="10"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_marginRight="-3dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_blood"/>
                        </LinearLayout>

                        <FrameLayout
                            android:layout_weight="9"
                            android:layout_width="0dp"
                            android:layout_height="50dp">
                            <Spinner
                                android:paddingLeft="10dp"
                                android:id="@+id/spinnerbloods"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/ic_arrow_drop_down"
                                android:layout_gravity="right|center"/>
                        </FrameLayout>
                    </LinearLayout>

                    <TextView
                        android:gravity="center|left"
                        android:id="@+id/et_address"
                        android:paddingLeft="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/textColor"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/ic_house"
                        android:hint="Enter your address "
                        android:layout_marginTop="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_search"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="OR"
                        android:layout_marginTop="25dp"
                        android:gravity="center"
                        />
                    <TextView
                        android:gravity="center|left"
                        android:id="@+id/et_loc"
                        android:paddingLeft="10dp"
                        android:textSize="16sp"
                        android:singleLine="true"
                        android:textColor="@color/textColor"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/ic_my_location"
                        android:hint="use current location "
                        android:layout_marginTop="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_search"/>


                    <Button
                        android:id="@+id/btn_submit"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="50dp"
                        android:text="Apply"
                        android:layout_marginBottom="30dp"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/bg_btn"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>