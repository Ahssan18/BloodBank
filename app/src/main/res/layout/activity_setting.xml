<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/scrollView"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".Activities.SettingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorRed"
        ><FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:padding="3dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center|left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"/>
    </FrameLayout></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linear_myprofile"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/profile"
                />
            <TextView
                android:textColor="@color/colorBlack"
                android:gravity="center|left"
                android:fontFamily="@font/nimbussanl_bol"
                android:id="@+id/tv_myprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:focusable="true"
                android:padding="17dp"
                android:text="@string/my_profile"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorView"/>
        <LinearLayout
            android:id="@+id/linear_contactus"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/contact_us"
                />
            <TextView
                android:textColor="@color/colorBlack"
                android:gravity="center|left"
                android:fontFamily="@font/nimbussanl_bol"
                android:id="@+id/tv_contacus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:focusable="true"
                android:drawablePadding="10dp"
                android:padding="17dp"
                android:text="@string/contact_us"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorView"/>
        <LinearLayout
            android:id="@+id/linear_aboutus"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/about_us"
                />
            <TextView
                android:textColor="@color/colorBlack"
                android:gravity="center|left"
                android:fontFamily="@font/nimbussanl_bol"
                android:id="@+id/tv_aboutus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:focusable="true"
                android:drawablePadding="10dp"
                android:padding="17dp"
                android:text="@string/about_us"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorView"/>
        <LinearLayout
            android:id="@+id/linear_rateus"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/rate_us"
                />
            <TextView
                android:textColor="@color/colorBlack"
                android:gravity="center|left"
                android:fontFamily="@font/nimbussanl_bol"
                android:id="@+id/tv_rateus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:focusable="true"
                android:drawablePadding="10dp"
                android:padding="17dp"
                android:text="@string/rate_us"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorView"/>
        <LinearLayout
            android:id="@+id/linear_share"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/share_app"
                />
            <TextView
                android:gravity="center|left"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/nimbussanl_bol"
                android:id="@+id/tv_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:focusable="true"
                android:padding="17dp"
                android:text="@string/share_app"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorView"/>
        <LinearLayout
            android:id="@+id/linear_privacy"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/privacy"
                />
            <TextView
                android:gravity="center|left"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/nimbussanl_bol"
                android:id="@+id/tv_privacypolict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:padding="17dp"
                android:focusable="true"
                android:text="@string/privacy_policy"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorView"/>
        <LinearLayout
            android:id="@+id/linear_delete"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_delete_account"
                />
            <TextView
                android:gravity="center|left"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/nimbussanl_bol"
                android:id="@+id/tv_delete_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:padding="17dp"
                android:focusable="true"
                android:text="@string/delete_account"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorView"/>
        <LinearLayout
            android:id="@+id/linear_logout"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/logout"
                />
            <TextView
                android:gravity="center|left"
                android:fontFamily="@font/nimbussanl_bol"
                android:id="@+id/tv_logout"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:padding="17dp"
                android:focusable="true"
                android:text="@string/logout"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorView"/>


    </LinearLayout>
    </LinearLayout>
</ScrollView>