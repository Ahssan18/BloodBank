<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context=".Activities.MainActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linear_toolbar"
        android:layout_width="match_parent"
        android:background="@color/colorRed"
        android:layout_height="0dp"
        android:layout_weight=".75">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_flag"
                android:layout_gravity="left|center"
                android:layout_marginLeft="20dp"
                android:scaleType="fitXY"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/logo"/>

                <Spinner
                    android:visibility="visible"
                    android:id="@+id/spinner_land"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center|left"
                    android:backgroundTint="@color/colorWhite"
                    android:layout_gravity="left|center"/>



            <TextView
                android:id="@+id/tv_titlebar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/app_name_"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_add_event"
                android:layout_gravity="right|center"
                android:padding="3dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_plus"/>
            <FrameLayout
                android:id="@+id/frame_notification"
                android:layout_gravity="center|right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_nottification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginStart="10dp"
                android:padding="3dp"
                android:src="@drawable/ic_notifications" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_notification_number"
                    android:gravity="center"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="18dp"
                    android:textColor="@color/colorRed"
                    android:textSize="8sp"
                    android:padding="1dp"
                    android:background="@drawable/bg_tv_nitification"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
            </FrameLayout>
            <ImageView
                android:id="@+id/iv_setting"
                android:layout_marginRight="60dp"
                android:layout_gravity="right|center"
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_settings"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_announcement"
                android:layout_marginRight="60dp"
                android:layout_gravity="right|center"
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_announcement"/>

        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linear_fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.25">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linear_fragment">
            </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottom_navigation_linear"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1">
        <View
            android:id="@+id/view_nav_bar"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="top"
            android:background="@color/colorRed_view"/>
        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/colorWhite"
            app:cardElevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/linearBottomNav"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="5"
                android:orientation="horizontal"
                android:layout_weight="1">
            <LinearLayout
                android:id="@+id/linear_donnar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="13dp"
                android:layout_weight="1">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_donnar"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:src="@drawable/donate"/>

                    <ImageView
                        android:id="@+id/iv_donnar_layer"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:src="@drawable/bg_layer_bottom_nav" />
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/linear_accepter"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="13dp"
                android:layout_weight="1">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/iv_request"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/request"/>
                    <ImageView
                        android:id="@+id/iv_request_layer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/bg_layer_bottom_nav"/>
                </FrameLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_chat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="15dp"
                android:layout_weight="1">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_chat"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:src="@drawable/chat"/>
                    <ImageView
                        android:id="@+id/iv_chat_layer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/bg_layer_bottom_nav"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="17dp"
                android:id="@+id/linear_hereos"
                android:layout_weight="1">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/iv_hereos"
                        android:layout_width="35dp"
                        android:layout_gravity="center"
                        android:layout_height="30dp"
                        android:src="@drawable/heroes"/>
                    <ImageView
                        android:id="@+id/iv_hereoes_layer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/bg_layer_bottom_nav"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="17dp"
                android:id="@+id/linear_services"
                android:layout_weight="1">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_services"
                        android:layout_width="25dp"
                        android:scaleType="centerCrop"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/services"/>
                    <ImageView
                        android:id="@+id/iv_services_layer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/bg_layer_bottom_nav"/>
                </FrameLayout>
            </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>